<div class="container module broker_quote_tool">
	<%= form_for @quote, url: {action: "update"}, method: "put", :locals => { :broker_role_id => @broker.id }, class: "form-inline" do |f| %>
	<%= render "edit_form" ,f:f %>
	<div class="footer navbar-fixed-bottom"></div>
	  <div class="row sticky-main-nav">
				<div class="col-sm-10">
					<%
						disable_class = @quote.is_complete? ? " disabled" : ""
					%>
			    <%= submit_tag l10n("save_changes"), class: "btn btn-primary #{disable_class}" %>
					<%= submit_tag l10n("add_family"), class: "btn btn-primary #{disable_class}" %>
					<%= link_to l10n('upload_roster'), upload_employee_roster_broker_agencies_broker_role_quote_path(@broker, @quote) , class: "btn btn-primary #{disable_class}", remote: true  ,id: "upload_employees" %>
					<%= link_to l10n('download_roster'), download_employee_roster_broker_agencies_broker_role_quote_path(@broker, @quote) , class: "btn btn-primary #{disable_class}",id: "download_employees" %> <br>
				</div>
				<div class="col-sm-2">
					<%= link_to l10n('back_to_quotes'), my_quotes_broker_agencies_broker_role_quotes_path(@broker), class: 'btn btn-primary btn-sm!', data: { no_turbolink: true } %>
				</div>
  </div>
</div>
<%end%>
