<div class="employee-upload">
  <i class="fa fa-times fa-3x pull-right modal-close"></i>
  <h2><%= l10n("upload_employee_roster")%></h2>
  <h4><%= l10n("broker_agencies.quotes.template_upload")%></h4>
  <%= link_to(document_download_path(env_bucket_name("templates"), "b4c0e3e6-cf9b-4b00-8194-403b110b4e01") + "?contenttype=application/vnd.ms-excel&filename=DCHL Employee Census.xlsx", class: "download") do %>
    <h4><%= l10n("broker_agencies.quotes.need_the_template")%> <i class="fa fa-arrow-circle-o-down fa-lg"></i>
      <%= l10n("broker_agencies.quotes.download_it_now")%>
    </h4>
  <% end %>
  <div class="upload-preview">
  </div>
  <%= form_tag({action: :build_employee_roster}, multipart: true, class: "upload_csv") do %>
    <%= file_field_tag :employee_roster_file %>
    <%= label_tag :employee_roster_file, 'Select File To Upload', class: 'select btn btn-primary btn-br' %>
    <%= submit_tag l10n("upload"), class: 'btn btn-primary btn-br'%>
  <%end%>
</div>
